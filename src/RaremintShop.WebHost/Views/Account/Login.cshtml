@model RaremintShop.Module.Identity.Models.UserLoginViewModel

@{
	ViewBag.Title = "ログイン";
}

<div class="container mt-5">
	<h2 class="text-center mb-4">ログイン</h2>

	<div class="row justify-content-center">
		<div class="col-md-6">
			<form asp-action="Login" method="post" class="shadow p-4 rounded bg-light">
				@Html.AntiForgeryToken() <!-- CSRFトークン -->

				<!-- DBエラー(全体エラーのみ) -->
				<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

				<!-- メールアドレス入力 -->
				<div class="form-group mb-3">
					<label for="email">メールアドレス</label>
					<input type="email" class="form-control" id="email" name="email" value="@Model?.Email" required />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<!-- パスワード入力 -->
				<div class="form-group mb-3">
					<label for="password">パスワード</label>
					<input type="password" class="form-control" id="password" name="password" required />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<!-- ログインボタン -->
				<div class="text-center">
					<button type="submit" class="btn btn-primary btn-block">ログイン</button>
				</div>

				<!-- 新規登録リンク -->
				<div class="mt-3 text-center">
					<p>アカウントをお持ちでない方は<a asp-action="Register" class="text-primary">こちら</a>から新規登録できます。</p>
				</div>
			</form>
		</div>
	</div>
</div>