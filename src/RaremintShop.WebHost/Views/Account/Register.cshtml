@model RaremintShop.Module.Identity.Models.UserRegisterViewModel

@{
    ViewBag.Title = "新規登録";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">新規会員登録</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Register" method="post" class="shadow p-4 rounded bg-light">
                @Html.AntiForgeryToken() <!-- CSRFトークン -->

                <!-- DBエラー(全体エラーのみ) -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- メールアドレス入力 -->
                <div class="form-group mb-3">
                    <label for="email">メールアドレス</label>
                    <input type="email" class="form-control" id="email" name="email" value="@Model?.Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- パスワード入力 -->
                <div class="form-group mb-3">
                    <label for="password">パスワード</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- パスワード確認入力 -->
                <div class="form-group mb-4">
                    <label for="confirmPassword">パスワード（確認）</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- 登録ボタン -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block">登録</button>
                </div>

                <!-- ログインリンク -->
                <div class="mt-3 text-center">
                    <p>すでにアカウントをお持ちの方は <a asp-action="Login" class="text-primary">こちら</a> からログインできます。</p>
                </div>
            </form>
        </div>
    </div>
</div>
