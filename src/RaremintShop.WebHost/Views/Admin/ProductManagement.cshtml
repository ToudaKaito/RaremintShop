@model List<RaremintShop.Module.Catalog.Models.CatalogViewModel>

@{
    ViewBag.Title = "商品管理ページ";
}

<div class="container mt-5">
    <h1 class="text-center mb-5">商品管理ページ</h1>

    <!-- 商品追加とカテゴリ管理のリンク -->
    <div class="mb-3">
        <a asp-controller="Catalog" asp-action="Register" class="btn btn-primary">商品を追加</a>
        <a asp-controller="Admin" asp-action="CategoryManagement" class="btn btn-secondary">カテゴリ管理ページ</a>
    </div>

    <!-- 商品リストの表示 -->
    <table class="table">
        <thead>
            <tr>
                <th>商品名</th>
                <th>価格</th>
                <th>在庫数</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.StockQuantity</td>
                    <td>
                        <!-- 編集ボタン -->
                        <a asp-action="Edit" asp-controller="Admin" asp-route-id="@product.Id" class="btn btn-warning btn-sm">編集</a>
                        <!-- 削除ボタン -->
                        <form asp-action="Delete" asp-controller="Admin" asp-route-id="@product.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('本当に削除しますか？');">削除</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>