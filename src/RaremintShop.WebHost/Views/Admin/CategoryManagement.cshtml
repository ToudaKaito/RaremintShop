@model List<RaremintShop.Module.Catalog.Models.Category>

@{
    ViewBag.Title = "カテゴリ管理ページ";
}

<div class="container mt-5">
    <h1 class="text-center mb-5">カテゴリ管理ページ</h1>

    <!-- カテゴリ追加のリンク -->
    <div class="mb-3">
        <a asp-controller="Category" asp-action="Register" class="btn btn-primary">カテゴリを追加</a>
    </div>

    <!-- カテゴリリストの表示 -->
    <table class="table">
        <thead>
            <tr>
                <th>カテゴリ名</th>
                <th>作成日時</th>
				<th>更新日時</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.CreatedAt</td>
					<td>@category.UpdatedAt</td>
                    <td>
                        <!-- 編集ボタン -->
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-warning btn-sm">編集</a>
                        <!-- 削除ボタン -->
                        <form asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('本当に削除しますか？');">削除</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>