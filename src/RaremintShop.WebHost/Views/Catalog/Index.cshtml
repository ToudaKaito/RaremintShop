@model List<RaremintShop.WebHost.Models.CatalogViewModel>

@{
    ViewBag.Title = "商品一覧";
}

<div class="container mt-5">
    <h1 class="text-center mb-5">商品一覧</h1>

    <div class="row justify-content-center">
        <!-- 商品リストをループして表示 -->
        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <!-- 商品画像（最初の画像のみ表示、なければダミー画像） -->
                        <img src="@(product.ImageUrls.FirstOrDefault() ?? "/images/noimage.png")"
                             class="card-img-top"
                             alt="@product.Name">
                        <div class="card-body text-center">
                            <!-- 商品名 -->
                            <h5 class="card-title">@product.Name</h5>
                            <!-- 商品説明 -->
                            <p class="card-text">@product.Description</p>
                            <!-- 商品価格 -->
                            <p class="card-text font-weight-bold">@product.Price.ToString("C")</p>
                            <!-- 詳細ページへのリンク（必要に応じてルーティングを修正） -->
                            <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@product.Id" class="btn btn-primary">詳細を見る</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- 商品が存在しない場合のメッセージ -->
            <div class="col-12 text-center">
                <p>商品が存在しません。</p>
            </div>
        }
    </div>
</div>