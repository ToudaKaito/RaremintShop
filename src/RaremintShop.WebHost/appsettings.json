{
  "Logging": {
    "LogLevel": {
      // 全体のデフォルトのログレベルを指定します。
      "Default": "Information",
      // Microsoft の名前空間に対するログレベルを指定します。ここでは警告以上をログに出力します。
      "Microsoft": "Warning",
      // アプリケーションの起動や停止に関する情報をログに出力します。
      "Microsoft.Hosting.Lifetime": "Information",
      // 自分のアプリケーション（RaremintShop）のログレベルを指定します。デバッグレベルまで出力します。
      "RaremintShop": "Debug"
    }
  },
  // アプリケーションで許可するホスト名を指定します。'*' はすべてのホストを許可します。
  "AllowedHosts": "*",
  "ConnectionStrings": {
    // データベース接続文字列を定義します。
    "DefaultConnection": "server=localhost;user=root;database=dbname;password=dbpassword;"
  }
}
